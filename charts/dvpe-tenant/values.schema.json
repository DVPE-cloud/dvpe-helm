{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Values",
  "definitions": {
    "Values": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "valueFiles": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^values.*\\.yaml$"
          }
        },
        "tenants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tenant"
          }
        }
      },
      "required": [
        "tenants",
        "valueFiles"
      ],
      "title": "Values"
    },
    "Tenant": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        },
        "repoURL": {
          "type": "string",
          "format": "uri",
          "qt-uri-protocols": [
            "https"
          ],
          "qt-uri-extensions": [
            ".git"
          ]
        },
        "githubAppInstallationID": {
          "type": "string",
          "format": "integer"
        },
        "users": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "namespaces": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "clusterResourceWhiteList": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ClusterResourceWhiteList"
          }
        }
      },
      "required": [
        "clusterResourceWhiteList",
        "githubAppInstallationID",
        "name",
        "namespaces",
        "repoURL",
        "users"
      ],
      "title": "Tenant"
    },
    "ClusterResourceWhiteList": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "group": {
          "type": "string"
        },
        "kind": {
          "type": "string"
        }
      },
      "required": [
        "group",
        "kind"
      ],
      "title": "ClusterResourceWhiteList"
    }
  }
}
