{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
      "properties": {
        "tenants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tenant"
          }
        }
      },
    "Tenant": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repoURL": {
          "type": "string",
          "format": "uri",
          "qt-uri-protocols": [
            "https"
          ],
          "qt-uri-extensions": [
            ".git"
          ]
        },
        "githubAppInstallationID": {
          "type": "string",
          "format": "integer"
        },
        "users": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "githubAppInstallationID",
        "repoURL",
        "users"
      ],
      "title": "Repository"
    }
  }
}
