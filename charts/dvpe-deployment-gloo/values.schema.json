{
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "product",
    "gloo"
  ],
  "properties": {
    "product": {
      "type": "object",
      "required": [
        "name"
      ]
    },
    "gloo": {
      "type": "object",
      "required": [
        "ingress"
      ],
      "properties": {
        "ingress": {
          "type": "object",
          "required": [
            "scope"
          ],
          "properties": {
            "scope": {
              "type": "string",
              "enum": [
                "public",
                "private",
                "cluster-internal"
              ]
            }
          }
        }
      }
    },
    "certificate": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "customIssuer": {
              "enum": [
                "internet",
                "intranet",
                "other",
                "none"
              ]
            }
          },
          "required": [
            "customIssuer"
          ],
          "if": {
            "properties": {
              "customIssuer": {
                "const": "other"
              }
            },
            "required": [
              "customIssuer"
            ]
          },
          "then": {
            "properties": {
              "customIssuerSelector": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "name"
                ]
              }
            },
            "required": [
              "customIssuerSelector"
            ]
          }
        },
        {
          "type": "object",
          "properties": {
            "useCustomIssuer": {
              "enum": [false]
            }
          },
          "required": ["useCustomIssuer"]
        }
      ]
    }
  }
}
